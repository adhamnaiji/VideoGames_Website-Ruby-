<div class="max-w-3xl mx-auto px-4 py-6 bg-white shadow-md rounded-lg">
  <h2 class="text-3xl font-bold mb-8 text-center">Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <i class="text-gray-600">(Leave blank if you donâ€™t want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-gray-600"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <i class="text-gray-600">(We need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>

    <div class="flex justify-between items-center mt-4">
      <%= f.submit "Update Profile", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition' %>
      <%= link_to "Cancel", edit_registration_path(resource_name), class: 'text-gray-600 hover:underline' %>
    </div>
  <% end %>

  <h3 class="text-2xl font-bold mt-8 mb-4 text-center">Delete Account</h3>
  <div class="text-center">
    <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition' %>
  </div>
</div>
