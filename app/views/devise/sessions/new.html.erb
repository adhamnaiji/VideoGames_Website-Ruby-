<div class="max-w-lg mx-auto px-8 py-8 bg-white rounded-lg shadow-md">
  <h2 class="text-4xl font-bold text-center mb-8 text-blue-600">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: 'block text-gray-700 text-xl font-semibold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm text-lg' %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: 'block text-gray-700 text-xl font-semibold mb-2' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm text-lg' %>
    </div>

    <div class="flex items-center justify-between mb-6">
      <%= f.check_box :remember_me, id: 'remember_me', class: 'form-checkbox' %>
      <%= f.label :remember_me, class: 'text-gray-700 text-base' %>
      
      <%= f.submit "Sign In", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition text-lg' %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: 'text-center text-blue-600 hover:underline' %>
</div>
