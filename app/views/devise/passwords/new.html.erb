<div class="max-w-md mx-auto px-4 py-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold mb-6 text-center">Forgot Your Password?</h2>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-4">
      <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
    </div>
    
    <div class="flex items-center justify-center">
      <%= f.submit "Send me reset password instructions", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition' %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
