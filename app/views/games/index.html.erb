
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
  <% @games.each do |game| %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <% if game.image.attached? %>
        <%= image_tag game.image.variant(resize_to_fill: [300, 300]), class: 'w-full h-48 object-cover' %>
      <% else %>
        <p class="text-gray-500 text-center">No image available</p>
      <% end %>
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2"><%= game.title %></h2>
        <p class="text-gray-600 mb-2"><strong>Genre:</strong> <%= game.genre %></p>
        <p class="text-gray-600 mb-4"><strong>Release Date:</strong> <%= game.release_date %></p>
        <%= link_to 'Show', game_path(game), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    </div>
  <% end %>
</div>
