<h1 class="text-2xl font-bold mb-6">Add New Game</h1>

<%= form_for @game, html: { class: 'space-y-6' } do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 p-4 rounded-md mb-6">
      <h2 class="text-lg font-semibold"><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
      <ul class="list-disc pl-5 mt-2">
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :title, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="field">
    <%= f.label :description, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_area :description, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="field">
    <%= f.label :genre, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.text_field :genre, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="field">
    <%= f.label :release_date, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.date_select :release_date, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="field">
    <%= f.label :price, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.number_field :price, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="field">
    <%= f.label :image, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.file_field :image, class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="actions">
    <%= f.submit 'Save Game', class: 'bg-blue-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
  </div>
<% end %>

<%= link_to 'Back', games_path, class: 'text-blue-500 hover:text-blue-700' %>
