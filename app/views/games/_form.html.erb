<%= form_with model: @game, local: true, html: { class: 'max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg' } do |form| %>
  <div class="mb-6">
    <%= form.label :title, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.text_field :title, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.text_area :description, rows: 4, class: 'form-textarea mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>

  <div class="mb-6">
    <%= form.label :genre, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.text_field :genre, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>

  <div class="mb-6">
    <%= form.label :release_date, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.date_select :release_date, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>

  <div class="mb-6">
    <%= form.label :image, class: 'block text-gray-700 text-sm font-semibold mb-2' %>
    <%= form.file_field :image, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>

  <div class="mt-6">
    <%= form.submit 'Submit', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
