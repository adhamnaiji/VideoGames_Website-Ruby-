<%= form_with model: @game, local: true do |form| %>
  <!-- Existing fields -->
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :genre %><br>
    <%= form.text_field :genre %>
  </div>
  <div>
    <%= form.label :release_date %><br>
    <%= form.date_select :release_date %>
  </div>
  
  <!-- New field for image upload -->
  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
