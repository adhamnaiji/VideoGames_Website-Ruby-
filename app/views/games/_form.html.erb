<%= form_with model: @game, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_field :title, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_area :description, class: 'form-textarea mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :genre, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_field :genre, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :release_date, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.date_select :release_date, class: 'form-select mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :price, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.number_field :price, step: '0.01', class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.label :image, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.file_field :image, class: 'form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm' %>
  </div>
  <div class="mb-4">
    <%= form.submit class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
