
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Fleur - Boutique de Fleurs</title>
  <meta name="description" content="Découvrez notre collection de fleurs fraîches. Commandez en ligne et faites-vous livrer à domicile.">
  <meta name="keywords" content="fleurs, boutique de fleurs, livraison de fleurs, fleurs fraîches">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<script src="https://cdn.tailwindcss.com"></script>


<nav class="bg-blue-500 text-white py-4">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex space-x-8 items-center">
      <%= link_to 'GameLib', root_path, class: 'text-white text-lg font-bold' %>
      <%= link_to 'Games', '/', class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
      <%= link_to 'Add New Game', new_game_path, class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
      <%= link_to 'About', '/', class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
      <%= link_to 'Contact', '/', class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
    </div>
    <div class="flex space-x-4 items-center">
      <% if user_signed_in? %>
        <%= link_to 'Profile', edit_user_registration_path, class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium' %>
      <% end %>
    </div>
  </div>
</nav>




